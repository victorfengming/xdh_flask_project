<view class="container">

  <view class="userinfo">
    <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}" background-size="cover"></image>
    <text class="userinfo-nickname">{{userInfo.nickName}}</text>
  </view>

  <view class="page__bd"> 
    <form bindsubmit="formSubmit" bindreset="formReset">
      <view class="weui-cells weui-cells_form">
        <view class="weui-cell weui-cell_vcode">
            <view class="weui-cell__hd">
                <label class="weui-label">姓名:</label>
            </view>
            <view class="weui-cell__bd">
                <input class="weui-input" name="username" type="tel" placeholder="请输入姓名"/>
            </view>
        </view>
        <view class="weui-cell weui-cell_vcode">
            <view class="weui-cell__hd">
                <label class="weui-label">手机号:</label>
            </view>
            <view class="weui-cell__bd">
                <input class="weui-input" name="phone" type="tel" placeholder="请输入手机号"/>
            </view>
        </view>
         <view class="weui-cell weui-cell_vcode">
            <view class="weui-cell__hd">
                <label class="weui-label">验证码:</label>
            </view>
            <view class="weui-cell__bd">
                <input class="weui-input" type="tel" placeholder="请输入验证码"/>
            </view>
            <view class="weui-cell__ft">
                <button class="weui-vcode-btn">获取验证码</button>
            </view>
        </view>
        <view class="weui-cell weui-cell_vcode">
            <view class="weui-cell__hd">
                <label class="weui-label">部门:</label>
            </view>
            <view class="weui-cell__bd">
                <input class="weui-input" name="bumen" type="tel" placeholder="请输入所在部门"/>
            </view>
        </view>
      </view>
      <view class="btn-area">
        <button form-type="submit">注册</button>
      </view>
    </form>
  </view>
</view>

